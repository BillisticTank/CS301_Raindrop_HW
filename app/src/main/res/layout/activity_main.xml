<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <edu.up.cs301_raindrop_hw.RaindropView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="top"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LeftIndication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="14"
                    android:text="Left" />

                <TextView
                    android:id="@+id/RightIndication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Right" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/LeftandRightBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="800"
                android:layout_marginBottom="30dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/UpIndication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="14"
                    android:text="Up" />

                <TextView
                    android:id="@+id/DownIndication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="Down" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/UpandDownBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="800"
                android:layout_marginBottom="30dp"

                />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>



</LinearLayout>